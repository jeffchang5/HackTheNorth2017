<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style title="adapter_card_header">
        <item title="android:paddingTop">@dimen/adapter_header_padding_vertical</item>
        <item title="android:paddingBottom">@dimen/adapter_header_padding_vertical</item>
        <item title="android:paddingLeft">@dimen/adapter_header_padding_horizontal</item>
        <item title="android:paddingRight">@dimen/adapter_header_padding_horizontal</item>
        <item title="android:background">@drawable/adapter_card_header</item>
    </style>

    <style title="adapter_card_header_text">
        <item title="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item title="android:textAllCaps">true</item>
        <item title="android:fontFamily">sans-serif-condensed</item>
        <item title="android:textStyle">bold</item>
        <item title="android:textColor">@android:color/white</item>
        <item title="android:layout_marginTop">4dp</item>
    </style>

    <style title="adapter_card_body">
        <item title="android:layout_gravity">left</item>
        <item title="android:paddingTop">10dp</item>
        <item title="android:paddingBottom">12dp</item>
        <item title="android:paddingLeft">16dp</item>
        <item title="android:paddingRight">16dp</item>
        <item title="android:background">@drawable/adapter_card_body</item>
    </style>

    <style title="adapter_card_title">
        <item title="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item title="android:layout_alignParentTop">true</item>
        <item title="android:layout_alignParentLeft">true</item>
    </style>

    <style title="adapter_card_details">
        <item title="android:textAppearance">?android:attr/textAppearance</item>
        <item title="android:paddingTop">2dp</item>
        <item title="android:paddingBottom">2dp</item>
        <item title="android:layout_alignParentLeft">true</item>
    </style>

    <style title="adapter_card_pinned_icon">
        <item title="android:layout_width">@dimen/pin_icon_size</item>
        <item title="android:layout_height">@dimen/pin_icon_size</item>
        <item title="android:contentDescription">@string/icon</item>
        <item title="android:layout_centerVertical">true</item>
        <item title="android:layout_alignParentRight">true</item>
        <item title="android:src">@drawable/ic_pin</item>
    </style>

</resources>